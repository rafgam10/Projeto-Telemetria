        # Card
        MDCard:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(10)
            md_bg_color: 0.09, 0.1, 0.15, 1  # Card azul escuro
            radius: [15, 15, 15, 15]

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(4)

                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: dp(8)

                    MDIcon:
                        icon: "forum"
                        font_size: "25sp"
                        theme_text_color: "Custom"
                        text_color: (0.66, 0.73, 0.27, 1)
                        size_hint: None, None
                        size: self.texture_size
