ScreenManager:
    PerfilScreen

<PerfilScreen>:
    name: "perfil"


    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        md_bg_color: 0.05, 0.07, 0.12, 1  # Fundo principal escuro (quase preto)

        MDTopAppBar:
            title: "[color=FFFFFF]Motorista[/color][color=A8BA44]Legal[/color]"
            icon: "steering"
            font_size: "12sp"
            elevation: 4.5
            padding: "3sp"
            spacing: "2sp"
            # icon_size: "10sp"
            # mode: "end"
            # type: "bottom"
            markup: True
            # left_action_items: [["menu", lambda x: app.abrir_menu()]]
            right_action_items:[["home", lambda x: app.ir_para_home()], ["account-outline", lambda x: app.ir_perfil() ], ["history", lambda x: app.abrir_historico()], ["cog", lambda x: app.abrir_config()]]
            use_overflow: True
            theme_text_color: "Custom"
            md_bg_color: 0.05, 0.07, 0.12, 1
            icon_color: 0.66, 0.73, 0.27, 1
            title_color: 1, 1, 1, 1

        # Cabeçalho de
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(10)
            spacing: dp(4)
            padding: dp(10), 0
            pos_hint: {'center_x': 0.5}

        # MDCard Main
        MDCard:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(10)
            md_bg_color: 0.09, 0.1, 0.15, 1  # Card azul escuro
            radius: [15, 15, 15, 15]

            MDBoxLayout:
                orientation: "horizontal"
                spacing: dp(10)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDIcon:
                    icon: "account"
                    font_size: "25sp"
                    theme_text_color: "Custom"
                    text_color: (0.66, 0.73, 0.27, 1)
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {"center_x":0.5,"center_y": 0.5}

                MDLabel:
                    text: "[b]Seu Perfil[/b]"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_style: "H6"
                    markup: True
            
            MDCard:
