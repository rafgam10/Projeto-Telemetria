                    icon: "account"
                    font_size: "25sp"
                    theme_text_color: "Custom"
                    text_color: (0.66, 0.73, 0.27, 1)
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {"center_x":0.5,"center_y": 0.5}

