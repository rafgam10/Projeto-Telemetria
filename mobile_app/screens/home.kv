ScreenManager:
    HomeScreen

<HomeScreen>:
    name: "home"


    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        md_bg_color: 0.05, 0.07, 0.12, 1  # Fundo escuro

        # Topo Bar:
        MDTopAppBar:
        
            orientation: "horizontal"
            spacing: dp(8)
            size_hint_y: None
            height: dp(56)
            padding: dp(10)
            elevation: 4.5
            md_bg_color: 0.05, 0.07, 0.12, 1
            radius: [15, 15, 15, 15]


            MDLabel:
                text: "[b][color=FFFFFF]Motorista[/color][color=A8BA44]Legal[/color][/b]"
                markup: True
                font_style: "H6"
                halign: "left"
                valign: "middle"
                height: self.texture_size[0]
                size_hint_x: 60
                pos_hint: {"center_y": 0.5}


            MDIconButton:
                icon: "home-variant-outline"
                theme_text_color: "Custom"
                text_color: (0.66, 0.73, 0.27, 1)
                md_bg_color:  0.09, 0.1, 0.15, 1
                pos_hint: {"center_y": 0.5}
                user_font_size: "20sp"

            MDIconButton:
                icon: "account"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                pos_hint: {"center_y": 0.5}
                user_font_size: "20sp"
                on_press:
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'perfil'

            MDIconButton:
                icon: "history"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                pos_hint: {"center_y": 0.5}
                user_font_size: "20sp"
                on_press: 
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'historico'

            MDIconButton:
                icon: "cog"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                pos_hint: {"center_y": 0.5}
                user_font_size: "20sp"
                on_press: 
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'config'


         # Cabeçalho de
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(10)
            spacing: dp(4)
            padding: dp(10), 0
            pos_hint: {'center_x': 0.5}        


        MDCard:
            md_bg_color: 0.09, 0.1, 0.15, 1  # Card azul escuro

            MDSwiper:
                size_hint_y: None
                height: root.height - dp(200)  # ajuste conforme seu layout
                y: root.height - self.height - dp(60)

                MDSwiperItem:
                    FitImage:
                        source: "assets/logo4.png"
                        radius: [20]
                        size_hint: None, None
                        size: dp(250), dp(350)
                        pos_hint: {"center_x": 0.5, "center_y": 0.53}

                MDSwiperItem:
                    FitImage:
                        source: "assets/logo2.png"
                        radius: [20]
                        size_hint: None, None
                        size: dp(250), dp(350)
                        pos_hint: {"center_x": 0.5, "center_y": 0.53}

                MDSwiperItem:
                    FitImage:
                        source: "assets/logo3.png"
                        radius: [20]
                        size_hint: None, None
                        size: dp(250), dp(350)
                        pos_hint: {"center_x": 0.5, "center_y": 0.53}
