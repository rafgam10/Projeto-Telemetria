ScreenManager:
    HomeScreen

<HomeScreen>:
    name: "home"

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        md_bg_color: 0.05, 0.05, 0.1, 1  # Fundo escuro

        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(8)
            size_hint_y: None
            height: dp(40)
            padding: dp(10), 0

            MDIcon:
                icon: "steering"
                font_size: "35sp"  # aumenta o tamanho do Ã­cone
                theme_text_color: "Custom"
                text_color: (0.66, 0.73, 0.27, 1)  # cor #A8BA44
                pos_hint: {"center_y": 0.5}
                height: self.texture_size[1]

            MDLabel:
                text: "[b][color=FFFFFF]Motorista[/color][color=A8BA44]Legal[/color][/b]"
                markup: True
                font_style: "H5"
                padding: "5sp"
                halign: "left"
                valign: "middle"
                size_hint_y: None
                height: self.texture_size[1]


        
