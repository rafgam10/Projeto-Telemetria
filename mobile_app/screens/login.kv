ScreenManager:
    LoginScreen

<LoginScreen>:
    name: "login"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(30)
            size_hint: 0.85, None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image:
                source: "./assets/logo3.png"
                size_hint_y: None
                height: dp(100)

            MDLabel:
                text: "[color=ffffff]Motorista[/color][color=A8BA44]Legal[/color]"
                halign: "center"
                markup: True
                font_style: "H5"

            MDLabel:
                text: " "
                halign: "center"
                theme_text_color: "Secondary"
                font_style: "Body2"

            MDLabel:
                text: "[b][color=ffffff]Monitore sua direção, conquiste metas e receba prêmios pela sua condução segura.[/color][/b]"
                halign: "center"
                # bold: True
                markup: True
                font_style: "Body2"

            MDLabel:
                text: " "
                halign: "center"
                theme_text_color: "Secondary"
                font_style: "Body2"
            MDLabel:
                text: " "
                halign: "center"
                theme_text_color: "Secondary"
                font_style: "Body2"

            MDLabel:
                text: "[b][color=ffffff]Acesse com a placa do seu caminhão:[/color][/b]"
                halign: "center"
                # bold: True
                markup: True
                font_style: "Body1"


            
            # MDLabel:
            #     text: " "
            #     halign: "center"
            #     theme_text_color: "Secondary"
            #     font_style: "Body2"

            MDTextField:
                id: placa_input
                hint_text: "                    (Ex: ABC1234)"
                icon_right: "truck"
                size_hint_x: 1
                icon_right_color_normal: 0.66, 0.73, 0.27, 1
                text_color_normal: "white"
                mode: "rectangle"
                theme_text_color: "Custom"
                text_color: 0.66, 0.73, 0.27, 1
                line_color_normal: 0.66, 0.73, 0.27, 1
                line_color_focus: 0.66, 0.73, 0.27, 1
                text_color_focus: "white"
                hint_text_color_normal: 0.66, 0.73, 0.27, 1
                icon_right_color: 0.66, 0.73, 0.27, 1

            MDFillRoundFlatButton:
                text: "ENTRAR"
                size_hint_x: 0.6
                md_bg_color: 0.66, 0.73, 0.27, 1
                text_color: 0, 0, 0, 1
                pos_hint: {"center_x": 0.5}
                on_release: app.pegar_placa()
